{
    "name": "minimization-files-for-landing",
    "scripts": {
        "clean": "rimraf dist",
        "copy": "copyfiles -u 1 \"src/**/*\" dist",
        "minify:html": "html-minifier-terser dist/index.html -o dist/index.html --collapse-whitespace --remove-comments --minify-css true",
        "minify:css": "cleancss -o dist/css/styles.css dist/css/styles.css",
        "minify:js": "uglifyjs dist/js/script.js -o dist/js/script.js -c",
        "build": "npm run copy && npm run minify:html && npm run minify:css && npm run minify:js"
    },
    "devDependencies": {
        "clean-css-cli": "^5.6.3",
        "copyfiles": "^2.4.1",
        "html-minifier-terser": "^7.2.0",
        "rimraf": "^5.0.10",
        "uglify-js": "^3.19.3"
    }
}
